<!-- Hoofdnavigatie / header -->
<div class="header-content">

  <!-- Logo-sectie met naam en slogan -->
  <div class="logo">

    <!-- Link naar de homepage (logo image klikbaar) -->
    <a href="/" class="logo-link">

      <!-- Container voor logo afbeelding + naam + slogan -->
      <div class="logo-title">

        <!-- naam ,slogan en logo afbeelding -->
        <p class="logo-text">

          <!-- Responsive logo afbeelding -->
          <picture class="logo-image">
            <!-- AVIF formaat voor moderne browsers -->
            <source srcset="/assets/images/logo.avif" type="image/avif">
            <!-- WebP formaat als fallback -->
            <source srcset="/assets/images/logo.webp" type="image/webp">
            <!-- PNG formaat als universele fallback -->
            <img
              src="/assets/images/logo.png"
              alt="Milledoni logo"
              width="80"
              height="80">
          </picture>
          ILLEDONI
        </p>

        <!-- Slogan -->
        <p class="logo-subtitle">Ontdek perfecte cadeaus</p>

      </div>
    </a>
  </div>
</div>


<!-- Hoofdnavigatie menu -->
<nav class="main-nav">
  <ul class="nav-list">
    <li>
      <a href="#ontdekken" class="nav-link">Ontdekken</a>
    </li>
    <li>
      <a href="#categorieen" class="nav-link">Categorieën</a>
    </li>
    <li>
      <a href="#spotters" class="nav-link">Spotters</a>
    </li>
    <li>
      <a href="#inspiratie" class="nav-link">Inspiratie</a>
    </li>
  </ul>
</nav>

<!-- Acties van de gebruiker -->
<nav class="user-actions">
  <a href="/mijn-lijst" class="btn btn-secondary">Mijn Lijst</a>
  <a href="/inloggen" class="btn btn-primary">Inloggen</a>
</nav>
</div>
</header>


<!-- Hoofd inhoud container -->
<main class="main-content">

  <!-- Buitenste layout container -->
  <div class="container">

    <!-- Hero sectie met introductie -->
    <section class="hero">
      <!-- Titel van de pagina -->
      <h1>Ontdek het perfecte cadeau</h1>

      <!-- Beschrijving -->
      <p class="hero-description">
        Vind unieke en persoonlijke cadeaus die écht indruk maken, 
        geselecteerd door onze community van cadeauexperts.
      </p>

      

{% for product in producten %}
  <div>
    <h2>{{ product.name }}</h2>
    <img
      src="{{ product.image }}"
      alt="{{ product.name }}"
      width="{{ product.img.width }}"
      height="{{ product.img.height }}"
      class="product-image"
      loading="lazy">
  </div>
{% endfor %}