                                   a4.974,4.974,0,0,0,6.4,0
                                   C19.214,18.48,24,13.514,24,8.967
                                   A6.8,6.8,0,0,0,17.5,1.917Z
                                   m-3.585,18.4a2.973,2.973,0,0,1-3.83,0
                                   C4.947,16.006,2,11.87,2,8.967
                                   a4.8,4.8,0,0,1,4.5-5.05
                                   A4.8,4.8,0,0,1,11,8.967
                                   a1,1,0,0,0,2,0
                                   a4.8,4.8,0,0,1,4.5-5.05
