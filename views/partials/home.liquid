<!-- Hoofdnavigatie / header -->
<header class="site-header">

  <!-- Uitlijning en spacing in de header -->
  <div class="header-content">

    <!-- Logo-sectie met merknaam en slogan -->
    <div class="logo">

      <!-- Link naar de homepage -->
      <a href="/" class="logo-link">

        <!-- Container voor logo afbeelding, naam en slogan -->
        <div class="logo-title">

        </div>



{% for product in producten %}
  <div>
    <h2>{{ product.name }}</h2>
    <img
      src="{{ product.image }}"
      alt="{{ product.name }}"
      width="{{ product.img.width }}"
      height="{{ product.img.height }}"
      class="product-image"
      loading="lazy">
  </div>
{% endfor %}